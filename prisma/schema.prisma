generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]
}

model Product {
  id            String    @id @default(uuid())
  sku           String    @unique
  name          String
  description   String
  price         Float
  originalPrice Float?
  image         String
  stock         Int       @default(0)
  categoryId    String
  category      Category  @relation(fields: [categoryId], references: [id])
  wholesalePrice Float?
  wholesaleMinQuantity Int? @default(1)
  variants      Json?     // Storing variants as JSON for flexibility in the prototype
  specs         Json?     // Storing specs as JSON
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
